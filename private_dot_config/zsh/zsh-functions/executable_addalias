addalias(){
  printf 'What should the alias name be?  '
  read -r aliasname
  printf 'What should the command be?  '
  read -r aliascmd
  echo "\nalias $aliasname=\"$aliascmd\"" >> ~/.config/zsh/zsh-exports-and-aliases
}
